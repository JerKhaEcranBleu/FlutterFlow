Future<String> pdfInvoiceDownload() async {
  // Generate the invoice as before
  final pdf = await generateInvoice();

  // Create a reference to the Firebase Storage location where you want to upload the file
  final storageRef = FirebaseStorage.instance
      .ref()
      .child('invoices/${DateTime.now().millisecondsSinceEpoch}.pdf');

  // Upload the PDF to Firebase Storage
  final uploadTask = storageRef.putFile(pdf.save());

  // Wait for the upload to complete and get the download URL
  final snapshot = await uploadTask.whenComplete(() {});
  final downloadUrl = await snapshot.ref.getDownloadURL();

  // Return the download URL
  return downloadUrl;
}
